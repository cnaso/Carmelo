<Window x:Class="Carmelo.Word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carmelo.Word"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        x:Name="AppWindow"
        Icon="Images/Logo/Logo.png"
        Title="MainWindow" Height="500" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        
                        <!-- Outer border / drop shadow margin -->
                        <Border Padding="{Binding OuterMarginThickness}">

                            <!-- Main window -->
                            <Grid>

                                <!-- Opacity mask for corners on grid -->
                                <Border x:Name="Container" CornerRadius="{Binding WindowCornerRadius}" Background="{StaticResource ForegroundLightBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.2" />
                                    </Border.Effect>
                                </Border>

                                <!-- Window border / drop shadow -->
                                <Border CornerRadius="{Binding WindowCornerRadius}" Background="{StaticResource ForegroundLightBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.2" />
                                    </Border.Effect>
                                </Border>

                                <!-- Main window content -->
                                <Grid>

                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}" />
                                    </Grid.OpacityMask>
                                    
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding TitleHeightGridLength}" />
                                        <!-- Title bar -->
                                        <RowDefinition Height="Auto" />
                                        <!-- Divider -->
                                        <RowDefinition Height="*" />
                                        <!-- Content -->
                                    </Grid.RowDefinitions>

                                    <!-- Title bar -->
                                    <Grid Grid.Row="0" Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Menu button -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Title text -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Windows button -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Menu button -->
                                        <Button x:Name="MenuButton" Grid.Column="0" Style="{StaticResource SystemIconButton}" Command="{Binding MenuCommand}">
                                            <Image Source="/Images/Logo/Logo.png" />
                                        </Button>

                                        <!-- Title text -->
                                        <Viewbox Grid.Column="1" Margin="0">
                                            <TextBlock x:Name="TitleText" Style="{StaticResource HeaderText}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}" />
                                        </Viewbox>

                                        <!-- Window buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Panel.ZIndex="1">
                                            <Button x:Name="Minimize" Style="{StaticResource WindowControlButton}" Command="{Binding MinimizeCommand}" Content="_" />
                                            <Button x:Name="Maximize" Style="{StaticResource WindowControlButton}" Command="{Binding MaximizeCommand}" Content="[ ]" />
                                            <Button x:Name="Close" Style="{StaticResource CloseButton}" Command="{Binding CloseCommand}" Content="X" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleHeight}"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Button Content="Test" />
    </Grid>
</Window>
